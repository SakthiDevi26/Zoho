package FileHandling;

import java.io.*;
import java.util.*;
public class bankOperation {
	static int balance;
	public static void doDeposit(String userName,int amount,HashMap<String, Integer> userMap) throws FileNotFoundException
	{
		
		balance = userMap.get(userName);
		if(amount<balance)
		{
			//balance = amount+balance;
			userMap.put(userName, userMap.get(userName)+amount);
			if(updateInFile(userName,userMap))
			{
				System.out.println("Amount Deposited");
			}
		}
		else
		{
			System.out.println("Insufficient Balance");
		}
	}
	private static boolean updateInFile(String userName, HashMap<String, Integer> userMap) throws FileNotFoundException {
		// TODO Auto-generated method stub
		File userfile = new File("userDetails.txt");
		Scanner fileContent = new Scanner(userfile);
		while(fileContent.hasNextLine())
		{
			System.out.print(Registeration.addToUserDetails(userName));
		}
		return false;
	}
