package user;

import basics.*;
import java.util.*;

public class UserLogin {
	public void userLoginAccount()
	{
	PrintMenu printmenu = new PrintMenu();
	Scanner scanner = new Scanner(System.in);
	printmenu.printAccountTypeMenu();
	int choice = scanner.nextInt();
	switch(choice)
	{
	case 1:
		GetDetails get = new GetDetails();
		get.getUserLoginDetails();
		SavingsUserLogin check = new SavingsUserLogin();
		if(check.canSavingsUserLogin(get.userName,get.passWord))
		{
			return true;
			//savingsaccount menu
		}
		else
		{
			
		}
	case 2:
		//checking
	}
		
	get.getUserLoginDetails();
	}
}
