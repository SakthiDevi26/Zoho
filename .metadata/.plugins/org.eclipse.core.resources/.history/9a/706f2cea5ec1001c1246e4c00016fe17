package FileHandling;

import java.util.*;
public class bankMenu {
	public bankMenu(String userName,HashMap<String, Integer> userMap) {
		// TODO Auto-generated constructor stub
		System.out.println("--------Welcome To Bank-------");
		System.out.println("1)Deposit Money");
		System.out.println("2)Withdraw Money");
		System.out.println("3)Logout");
		System.out.println("Enter your choice");
		chooseOperation(userName,userMap);
	}
	public void chooseOperation(String userName,HashMap<String, Integer> userMap)
	{
		int amount;
		//printbankMenu();
		Scanner scanner = new Scanner(System.in);
		int choice;
		choice = scanner.nextInt();
		switch(choice)
		{
		case 1:
			System.out.println("Enter amount");
			amount = scanner.nextInt();
			bankOperation.doDeposit(userName,amount,userMap);
			break;
		case 2:
			System.out.println("Enter amount");
			amount = scanner.nextInt();
			bankOperation.doWithdraw(userName,amount);
			break;
		case 3:
			System.out.println("Thank you");
			Main.printMainMenu();
		}
		bankMenu();

	}

}
