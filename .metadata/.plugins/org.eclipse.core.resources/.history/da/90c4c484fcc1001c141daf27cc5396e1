package adminFunctions;

import java.sql.Connection;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.*;

import sql.connection;
import basics.GetDetails;
import basics.PrintMenu;

public class DeleteUsers {
	String sql="";
	Connection con = connection.getConnection();
	public boolean deleteUsers() {
		PrintMenu printmenu = new PrintMenu();
		printmenu.printAccountTypeMenu();
		GetDetails get = new GetDetails();
		Scanner scanner = new Scanner(System.in);
		int choice = scanner.nextInt();
		if(choice == 1)
		{
				get.getUserLoginDetails();
				Statement statement;
				try {
					statement = con.createStatement();
					sql = "delete from savings_customer where name='"+get.userName+"'";
					if (statement.executeUpdate(sql)==1)
					{
						//System.out.println("Savings account user added successfully!!");
						return true;
					}
				} catch (SQLException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
				return false;
		}
		else if(choice == 2)
		{
			if(get.getUserCreateAccountDetails())
			{
				Statement statement;
				try {
					statement = con.createStatement();
					sql ="Insert into checkings_customer(name,balance,pass_code) values('"+ get.userName + "'" +get.accountBalance + get.passWord +")";
					if (statement.executeUpdate(sql)==1)
					{
						//System.out.println("Checkings account user added successfully!!");
						return true;
					}
				} catch (SQLException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
			
			return false;
		}
		else
		{
			System.out.println("Enter valid choice");
			addUsers();
		}
		return false;
	}
}
