package user;

import basics.*;
import java.util.*;

public class UserLogin {
	public void userLoginAccount()
	{
	PrintMenu printmenu = new PrintMenu();
	Scanner scanner = new Scanner(System.in);
	printmenu.printAccountTypeMenu();
	int choice = scanner.nextInt();
	switch(choice)
	{
	case 1:
		GetDetails get = new GetDetails();
		get.getUserLoginDetails();
		checkSavingsUserLogin checksave = new SavingsUserLogin();
		if(check.canSavingsUserLogin(get.userName,get.passWord))
		{
			System.out.println("Successfully logged in");
			//savingsaccount menu
		}
		else
		{
			System.out.println("Cannot login");
			UserRegisteration user = new UserRegisteration();
			user.userRegister();
		}
	case 2:
		get.getUserLoginDetails();
		CheckingUserLogin checkchecking = new CheckingUserLogin();
		if(checkchecking.canCheckingUserLogin(get.userName,get.passWord))
		{
			System.out.println("Successfully logged in");
			//savingsaccount menu
		}
		else
		{
			System.out.println("Cannot login");
			UserRegisteration user = new UserRegisteration();
			user.userRegister();
		}
		
	}
		
	get.getUserLoginDetails();
	}
}
