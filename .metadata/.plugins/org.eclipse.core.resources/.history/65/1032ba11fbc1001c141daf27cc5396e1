package adminFunctions;

import java.sql.Connection;
import java.sql.Statement;
import java.util.*;

import sql.connection;
import basics.GetDetails;
import basics.PrintMenu;

public class AddUsers {
	String sql="";
	Connection con = connection.getConnection();
	public boolean addUsers() {
		PrintMenu printmenu = new PrintMenu();
		printmenu.printAccountTypeMenu();
		GetDetails get = new GetDetails();
		Scanner scanner = new Scanner(System.in);
		int choice = scanner.nextInt();
		if(choice == 1)
		{
			get.getUserCreateAccountDetails();
			Statement st = con.createStatement();
			sql ="Insert into savings_customer(name,balance,pass_code) values('"+ get.userName + "'" +get.accountBalance + get.passWord +")";
			if (st.executeUpdate(sql)==1)
			{
				//System.out.println("Savings account user added successfully!!");
				return true;
			}
		}
		else if(choice == 2)
		{
			//checking add
			return true;
		}
		else
		{
			System.out.println("Enter valid choice");
			addUsers();
		}
		return false;
	}
}
